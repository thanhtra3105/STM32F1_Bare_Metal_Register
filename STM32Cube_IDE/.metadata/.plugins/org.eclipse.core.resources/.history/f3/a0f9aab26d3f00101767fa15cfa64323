/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void HAL_SPI_RxCpltCallback(SPI_HandleTypeDef *hspi)
{
	UNUSED(hspi);
	if(hspi->Instance == SPI2)
	{
		HAL_SPI_Receive_IT(&hspi2, rx_slave, 1);
		rx_buffer[idx++] = rx_slave[0];
		if(rx_slave[0] == '\n')
			idx = 0;

	}
}

void spi_config(void)
{
    // Enable clocks
    RCC->APB2ENR |= (1 << 12) | (1 << 2); // SPI1, GPIOA
    RCC->APB2ENR |= (1 << 0);             // AFIO optional

    // GPIO config
    // PA5 (SCK) - AF push-pull
    GPIOA->CRL &= ~(0xF << 20);
    GPIOA->CRL |=  (0xB << 20);

    // PA6 (MISO) - Input floating
    GPIOA->CRL &= ~(0xF << 24);
    GPIOA->CRL |=  (0x4 << 24);

    // PA7 (MOSI) - AF push-pull
    GPIOA->CRL &= ~(0xF << 28);
    GPIOA->CRL |=  (0xB << 28);

    // SPI1 config
    SPI1->CR1 = 0;
    SPI1->CR1 &= ~(0x07<<3);  // BR = Fclk/2
    SPI1->CR1 |= (1 << 2);    // Master mode
    SPI1->CR1 |= (1 << 1);    // CPOL = 1
    SPI1->CR1 |= (1 << 0);    // CPHA = 1
    SPI1->CR1 &= ~(1 << 10);  // Full duplex
    SPI1->CR1 &= ~(1 << 11);  // 8-bit data
    SPI1->CR1 |= (1 << 6);    // SPI enable
}

void spi1_master_transmit(uint8_t data)
{
    while (!(SPI1->SR & (1 << 1))); // TXE
    SPI1->DR = data;
    while (SPI1->SR & (1 << 7));    // Wait for BSY = 0
}
void spi_transmit(uint8_t *data)
{
	uint8_t i=0;
	for(i=0;i<strlen(data);i++)
	{
		spi1_master_transmit(data[i]);
	}
}
uint16_t spi1_master_receive()
{
	while(!(SPI1->SR & 0x01)); // doi rx khong trong( co du lieu)
	return SPI1->DR;
}

